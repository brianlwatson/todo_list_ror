
<%= form_for @user do |u| %>
    <p>
        <%= u.label :name %><br/>
        <%= u.text_field :name %>
    </p>

    <p>
       <%= u.label :password %><br/>
       <%= u.text_field :password %>
    </p>

    <p>
        <%= u.label :email %><br/>
        <%= u.text_field :email %>
    </p>

    <p>
        <%= u.submit %>
    </p>

<% end %>